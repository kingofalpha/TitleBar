<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.kongzue.titlebar.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#f9f9f9"
        app:backText="返回"
        app:gravity="center"
        app:leftButtonImage="@mipmap/img_back_ios"
        app:mainColor="#3478f6"
        app:splitLineColor="#b2b2b2"
        app:statusBarTransparent="true"
        app:title="iOS样式"
        app:titleBold="true"
        app:titleColor="@color/colorBlack"
        app:titleSize="18dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="本页代码："
                android:textSize="12dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#64000000">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="&lt;com.kongzue.titlebar.TitleBar\n    android:id=&quot;@+id/titleBar&quot;\n    android:layout_width=&quot;match_parent&quot;\n    android:layout_height=&quot;55dp&quot;\n    android:background=&quot;#f9f9f9&quot;\n    app:backText=&quot;返回&quot;\n    app:gravity=&quot;center&quot;\n    app:leftButtonImage=&quot;@mipmap/img_back_ios&quot;\n    app:mainColor=&quot;#3478f6&quot;\n    app:splitLineColor=&quot;#b2b2b2&quot;\n    app:statusBarTransparent=&quot;true&quot;\n    app:title=&quot;iOS样式&quot;\n    app:titleBold=&quot;true&quot;\n    app:titleColor=&quot;@color/colorBlack&quot;\n    app:titleSize=&quot;18dp&quot; /&gt;"
                    android:textColor="#fff"
                    android:textIsSelectable="true"
                    android:textSize="12dp"
                    android:typeface="monospace" />

            </HorizontalScrollView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>